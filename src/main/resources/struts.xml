<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <include file="struts-default.xml"></include>

    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.devMode" value="true"/>


    <package name="basePackage" extends="struts-default">

        <global-results>
            <result name="login" type="redirect">/login.jsp</result>
            <result name="runtimeException" >/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <!-- 异常处理:用于处理shiro抛出的异常 -->
        <global-exception-mappings>
            <!-- 未登录 -->
            <exception-mapping exception="org.apache.shiro.authz.UnauthenticatedException"
                               result="login"/>
            <!-- 没有权限访问 -->
            <exception-mapping exception="org.apache.shiro.authz.UnauthorizedException"
                               result="login"/>
        </global-exception-mappings>

        <!--
        <action name="*_*" class="{1}" method="{2}">
             <result name="success">jsp/${directUrl}.jsp</result>

           <result name="action" type="redirectAction">${directUrl}</result>

            <allowed-methods>*</allowed-methods>
         </action>
         -->
    </package>

    <include file="com/sdut/ngxykjc/User/conf/user-struts.xml"></include>

</struts>